{
  "manifest_version": 2,

  "name": "Pinoccio Dev",
  "description": "Setup and connect to your Pinoccio devices.",
  "version": "1.1",

  "app":{
    "background":{
      "scripts":["pinoccio.js", "serial.js", "tcp-server.js", "async.js", "main.js"]
    }
  },
  "permissions":[
    "usb",
    "serial",
    "storage",
    { "socket" : ["tcp-listen"] },
    {
      "usbDevices": [
        {
          "vendorId":7504,
          "productId":24657
        }
      ]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.pinocc.io/*", "*://localhost/*"]
  }
}
